{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./src",
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "ESNext",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
